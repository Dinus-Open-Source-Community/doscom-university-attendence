<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scan QR Code</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #6e7ff3, #a5b4f7);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Roboto', sans-serif;
            overflow: hidden;
            position: relative;
            padding-bottom: 60px; /* Tambahkan padding bawah */
        }
        .qr-container {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            padding: 20px;
            text-align: center;
            max-width: 90%;
            width: 100%;
        }
        #reader {
            width: 100%;
            max-width: 400px;
            margin: 0 auto 20px;
            border: 2px dashed #6e7ff3;
            border-radius: 10px;
            padding: 10px;
            background-color: #f8f9fa;
        }
        .status-message {
            margin-top: 20px;
            font-weight: bold;
        }
        .success {
            color: #28a745;
        }
        .error {
            color: #dc3545;
        }
        .user-details {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
            margin-top: 20px;
            transform: translateY(-20px);
            opacity: 0;
        }
        .user-details.show {
            transform: translateY(0);
            opacity: 1;
        }
        .footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            color: #ffffff;
            font-size: 0.9em;
        }
        .qr-title {
            font-size: 1.5em;
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
        }
        .qr-description {
            font-size: 1em;
            color: #666;
            margin-bottom: 20px;
        }
        .restart-button {
            margin-top: 20px;
            background-color: #6e7ff3;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }
        .restart-button:hover {
            background-color: #5a6bcf;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="qr-container">
                    <h2 class="qr-title">Presensi Doscom University</h2>
                    <p class="qr-description">Arahkan kamera Anda ke QR Code untuk melakukan presensi.</p>
                    <div id="reader"></div>
                    <div id="status" class="status-message"></div>
                    <div id="user-info" class="user-details"></div>
                    <button class="restart-button" onclick="initScanner()">Restart Scan</button>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        &copy; 2023 Presensi QR Code. All rights reserved.
    </div>

    <script src="https://unpkg.com/html5-qrcode"></script>
    <script>
        const statusDiv = document.getElementById('status');
        const userInfoDiv = document.getElementById('user-info');
        let html5QrcodeScanner;
        let isScanning = true;

        function initScanner() {
            html5QrcodeScanner = new Html5QrcodeScanner(
                "reader", { 
                    fps: 10, 
                    qrbox: 250,
                    aspectRatio:  1.0
                }
            );
            html5QrcodeScanner.render(onScanSuccess, onScanError);
        }

        function onScanSuccess(decodedText, decodedResult) {
            isScanning = false;
            html5QrcodeScanner.clear();

            fetch('/submit-qr', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ token: decodedText })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    statusDiv.innerHTML = `
                        <div class="success">
                            Presensi Berhasil! ‚úÖ
                        </div>
                    `;
                    userInfoDiv.innerHTML = `
                        <h3>Detail Pengguna</h3>
                        <p><strong>Nama:</strong> ${data.user.name}</p>
                        <p><strong>Role:</strong> ${data.user.role}</p>
                        <p><strong>Phone:</strong> ${data.attendance.present_date}</p>
                        <p><strong>Waktu Presensi:</strong> ${data.attendance.join_time}</p>
                    `;
                    userInfoDiv.classList.add('show');

                    setTimeout(() => {
                        statusDiv.innerHTML = '';
                        userInfoDiv.innerHTML = '';
                        userInfoDiv.classList.remove('show');
                        isScanning = true;
                        initScanner();
                    }, 10000);
                } else {
                    statusDiv.innerHTML = `
                        <div class="error">
                            ${data.message} ‚ùå
                        </div>
                    `;

                    setTimeout(() => {
                        statusDiv.innerHTML = '';
                        userInfoDiv.innerHTML = '';
                        userInfoDiv.classList.remove('show');
                        isScanning = true;
                        initScanner();
                    }, 3000);
                }
            })
            .catch(error => {
                statusDiv.innerHTML = `
                    <div class="error">
                        Terjadi kesalahan üö´
                    </div>
                `;

                setTimeout(() => {
                    statusDiv.innerHTML = '';
                    userInfoDiv.innerHTML = '';
                    userInfoDiv.classList.remove('show');
                    isScanning = true;
                    initScanner();
                }, 3000);
            });
        }

        function onScanError(errorMessage) {
            console.log(errorMessage);
        }

        document.addEventListener('DOMContentLoaded', () => {
            initScanner();
        });
    </script>
</body>
</html>
